{
    "$schema": "/etc/xdg/swaync/configSchema.json",

    "positionX": "right",
    "positionY": "top",

    "layer": "overlay",
    "control-center-layer": "overlay",
    "layer-shell": true,
    "cssPriority": "user",

    "control-center-width": 300,
    "control-center-height": 700,
    "control-center-margin-top": 8,
    "control-center-margin-bottom": 8,
    "control-center-margin-right": 8,
    "control-center-margin-left": 0,

    "notification-window-width": 300,
    "notification-body-image-height": 1,
    "notification-body-image-width": 1,
    "notification-inline-replies": true,
    "notification-2fa-action": true,

    "timeout": 3,
    "timeout-low": 1,
    "timeout-critical": 1,

    "fit-to-screen": true,
    "keyboard-shortcuts": true,
    "image-visibility": "when available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,

    "widgets": [
        "menubar#label",
        "volume",
        "backlight",
        "buttons-grid"
    ],

    "widget-config": {
        "mpris": {
            "image-size": 80,
            "image-radius": 0
        },
        "volume": {
            "label": "Û∞ïæ "
        },

        "backlight": {
            "label": "Û∞Éü "
        },

        "menubar#label": {
            "menu#power-buttons": {
                "label": "ÔÄë",
                "position": "right",
                "actions": [
                    {
                        "label": "ÔÄ° Reboot",
                        "command": "systemctl reboot"
                    },
                    {
                        "label": "Ôëñ Lock",
                        "command": "hyprlock"
                    },
                    {
                        "label": "ÔÇã Logout",
                        "command": "hyprctl dispatch exit 0"
                    },
                    {
                        "label": "ÔÄë Shut down",
                        "command": "systemctl poweroff"
                    }
                ]
            },

            "menu#powermode-buttons": {
                "label": "Û∞††",
                "position": "right",
                "actions": [
                    {
                        "label": "Û∞ìÖ Performance",
                        "command": "powerprofilesctl set performance"
                    },
                    {
                        "label": "Û∞æÖ Balanced",
                        "command": "powerprofilesctl set balanced"
                    },
                    {
                        "label": "Û∞æÜ Power Saver",
                        "command": "powerprofilesctl set power-saver"
                    }
                ]
            },

            "buttons#wallpaper-switcher": {
                "position": "left",
                "actions": [
                    {
                        "label": "Û±ÑÑ",
                        "command": "~/.config/hypr/scripts/hyprwall-init.sh"
                    }
                ]
            }
        },

        "buttons-grid": {
            "actions": [
                {
                    "label": "Ôáª",
                    "type": "button",
                    "command": "swaync-client --close-panel && sleep 0.7 && color=$(hyprpicker -a -f hex) && notify-send -a 'Hyprpicker' 'üé® Color copied!' $color"
                },
                {
                    "label": "Û∞ç≠",
                    "command": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
                    "type": "toggle"
                },
                {
                    "label": "Û∞§Ñ",
                    "command": "swaync-client -d",
                    "type":"toggle"
                },
                {
                    "label": "ÔÄì",
                    "command": "kitty bash -i -c 'Settings'"
                },
                {
                    "label": "ÓØ¢",
                    "command": "kitty bash -i -c 'tasks'"
                }
            ]
        }
    }
}

